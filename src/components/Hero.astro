---
import Frases from "./Frases.astro";
import NavBar from "./NavBar.astro";
import Button from "./Button.astro";
import NavBar2 from "./NavBar2.astro";
import NavbarTW from "./NavbarTW.astro";
---

<section class="hero">
  <NavbarTW />
  <div class="container">
    <section class="nombrePortada">
      <h1>Cecilia</h1>
      <h1>Urra Elgueta</h1>
      <h2>ACOMPAÃ‘ANTE EMOCIONAL</h2>
      <section id="container-bottom">
        <Frases />
      </section>
      <Button href="#contact" caption="CONTACTO" />
    </section>
  </div>
</section>

<style>
  .hero {
    background-image: url("/images/CeciliaUrra.svg");
    height: 100vh;
    width: 100%;
    background-size: cover;
    text-align: center;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding-top: 10%;
  }

  .nombrePortada {
    font-family: "Libre Caslon Display";
  }

  .nombrePortada h1 {
    font-size: 120px;
    font-weight: 400;
    line-height: 1.2;
    color: #4a4a43;
  }

  .nombrePortada h2 {
    font-family: "Nunito";
    font-weight: bold;
    font-size: 16px;
    color: #4a4a43;
  }

  h1 {
    font-size: 3.5rem;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 2rem;
    color: #4a5568;
    margin-bottom: 2rem;
    font-weight: 400;
  }

