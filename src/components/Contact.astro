  }

  .schedule {
    margin-top: 2rem;
  }

  .schedule h4 {
    color: #553c9a;
    margin-bottom: 1rem;
  }

  .contact-form {
    display: grid;
    gap: 1.5rem;
  }

  .form-group {
    display: grid;
    gap: 0.5rem;
  }

  label {
    color: #4a5568;
    font-weight: 500;
  }

  input,
  textarea {
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 5px;
    width: 100%;
  }

  textarea {
    height: 150px;
    resize: vertical;
  }

  button {
    background-color: #553c9a;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #44337a;
  }

  @media (max-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
  }
</style>
